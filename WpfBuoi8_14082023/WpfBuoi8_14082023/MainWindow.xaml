<Window x:Class="WpfBuoi8_14082023.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBuoi8_14082023"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Margin="10">
            <ListViewItem>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/chroma_green.png" Margin="0,0,5,0" Height="20" Width="20" />
                    <TextBlock>Green</TextBlock>
                </StackPanel>
                </ListViewItem>
                <ListViewItem>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/Pure_blue.png" Margin="0,0,5,0" Height="20" Width="20" />
                        <TextBlock>Blue</TextBlock>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem IsSelected="True">
                    <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/light_red.png" Margin="0,0,5,0" Height="20" Width="20" />
                        <TextBlock>Red</TextBlock>
                    </StackPanel>
                </ListViewItem>
        </ListView>
    </Grid>

</Window>
