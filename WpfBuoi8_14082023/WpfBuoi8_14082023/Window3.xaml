<Window x:Class="WpfBuoi8_14082023.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBuoi8_14082023"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <ListView Margin="10" Name="lvDataBinding">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="Name:" />
                        <TextBlock Text="{Binding Name1}" FontWeight="Bold"/>
                        <TextBox Text="," />
                        <TextBlock Text="Age:" />
                        <TextBlock Text="{Binding Age1}" FontWeight="Bold"/>
                        <TextBox Text="(" />
                        
                        <TextBlock Text="{Binding Mail}" TextDecorations="Underline" Foreground="Blue" Cursor="Hand" FontWeight="Bold"/>
                        <TextBox Text=")" />
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</Window>
